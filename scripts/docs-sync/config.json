{
  "targetFiles": {
    "metrics": ["AGENT_CONTEXT.md", "ARCHITECTURE.md", "CLAUDE.md"],
    "apiDocs": "API.md",
    "security": "SECURITY.md",
    "crossRefs": ["*.md", "docs/**/*.md"]
  },
  "architectureCatalogs": {
    "controllers": "docs/CONTROLLER_CATALOG.md",
    "services": "docs/SERVICE_CATALOG.md",
    "utilities": "docs/UTILITY_REFERENCE.md"
  },
  "watchPaths": ["js/**/*.js"],
  "excludePaths": ["js/workers/embed-worker.js"],
  "debounceMs": 500,
  "markers": {
    "start": "<!-- AUTO-GENERATED:START -->",
    "end": "<!-- AUTO-GENERATED:END -->"
  },
  "versioning": {
    "source": "git",
    "fallback": "package.json"
  },
  "git": {
    "autoCommit": false,
    "commitMessage": "docs: sync documentation from code analysis"
  },
  "catalogs": {
    "enabled": true,
    "groupByDirectory": true
  }
}
