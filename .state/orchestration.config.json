{
  "default_mode": "standard",
  "modes": {
    "aggressive": {
      "poll_interval_sec": 2,
      "poll_jitter_sec": 1,
      "heartbeat_timeout_sec": 6,
      "convergence_threshold": 2
    },
    "standard": {
      "poll_interval_sec": 5,
      "poll_jitter_sec": 2,
      "heartbeat_timeout_sec": 15,
      "convergence_threshold": 2
    },
    "conservative": {
      "poll_interval_sec": 10,
      "poll_jitter_sec": 3,
      "heartbeat_timeout_sec": 30,
      "convergence_threshold": 3
    }
  },
  "skip_orchestration_if_duration_under": 20,
  "batch_read_enabled": true,
  "jitter_enabled": true
}
