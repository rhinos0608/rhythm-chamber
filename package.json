{
  "name": "rhythm-chamber",
  "version": "1.0.0",
  "description": "Rhythm Chamber is an AI-powered data analytics application that focuses on what your data says about youâ€”think Spotify Wrapped but year-round and actually personalized. Bring your own intelligence: run local models or your own keys, with demo mode and template-driven profile synthesis for instant exploration. Upload your JSON/ZIP export or connect Spotify for quick snapshots. The app is 100% client-side; only your chosen AI provider and music service see your data.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "npx http-server . -p 8080 -c-1",
    "dev:coop-coep": "node scripts/dev-server-with-coop-coep.mjs 8080",
    "dev:dist": "npx http-server dist -p 8080 -c-1",
    "build": "node scripts/build.mjs",
    "build:dev": "node scripts/build.mjs",
    "test": "npx playwright test",
    "pretest": "npm run lint:globals",
    "test:unit": "vitest run tests/unit/",
    "test:unit:watch": "vitest tests/unit/",
    "test:unit:json": "node scripts/test-wrapper.mjs unit",
    "test:architecture": "vitest run tests/architecture/",
    "test:architecture:json": "node scripts/test-wrapper.mjs architecture",
    "test:e2e:json": "node scripts/test-wrapper.mjs e2e",
    "test:json": "node scripts/test-wrapper.mjs unit && node scripts/test-wrapper.mjs e2e",
    "test:results": "node scripts/parse-test-results.mjs",
    "test:results:summary": "node scripts/parse-test-results.mjs --summary",
    "test:results:failures": "node scripts/parse-test-results.mjs --failures",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "lint:globals": "node scripts/lint-window-globals.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "npm run lint && npm run lint:globals",
    "test:report": "npx playwright show-report",
    "analyze:deps": "node scripts/analyze-deps-simple.js",
    "docs:sync": "node scripts/docs-sync/orchestrator.js --mode=manual",
    "docs:sync:commit": "node scripts/docs-sync/orchestrator.js --mode=manual --commit",
    "docs:watch": "node scripts/docs-sync/watcher.js",
    "docs:validate": "node scripts/docs-sync/orchestrator.js --mode=hook",
    "watcher:start": "node mcp-server/scripts/watcher-control.js start",
    "watcher:stop": "node mcp-server/scripts/watcher-control.js stop",
    "watcher:status": "node mcp-server/scripts/watcher-control.js status",
    "watcher:restart": "node mcp-server/scripts/watcher-control.js restart",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhinos0608/rhythm-chamber.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/rhinos0608/rhythm-chamber/issues"
  },
  "homepage": "https://github.com/rhinos0608/rhythm-chamber#readme",
  "browserslist": [
    "Chrome >= 90",
    "Edge >= 90",
    "Firefox >= 90",
    "Safari >= 14.5",
    "iOS >= 14.5",
    "not IE 11",
    "not dead"
  ],
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "async-mutex": "^0.5.0",
    "jszip": "^3.10.1",
    "marked": "^12.0.2"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@babel/types": "^7.28.6",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.6",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "chokidar": "^5.0.0",
    "doctrine": "^3.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.18.0",
    "fake-indexeddb": "^6.2.5",
    "glob": "^13.0.0",
    "globals": "^15.14.0",
    "happy-dom": "^20.3.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "simple-git": "^3.30.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
